<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_detail_info"
    android:orientation="vertical"
    tools:context="com.knunu.android.whesiknow.DetailInfoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="store name"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/abc_primary_text_material_light"
        android:layout_marginTop="5dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/storeInfo"
        android:layout_margin="5dp"
        android:background="@drawable/border">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="위치"
            android:id="@+id/location"
            android:textColor="@color/abc_primary_text_material_light" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="전화번호"
            android:id="@+id/number"
            android:textColor="@color/abc_primary_text_material_light" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="주요 메뉴"
            android:id="@+id/menu"
            android:textColor="@color/abc_primary_text_material_light" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="영업시간"
            android:id="@+id/hour"
            android:textColor="@color/abc_primary_text_material_light" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/review"
        android:layout_margin="5dp"
        android:background="@drawable/border">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Review 1 짱이예요 내일 또 와야지 강추~~"
                android:id="@+id/review1"
                android:textColor="@color/abc_primary_text_material_light" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Review 2 또 오고싶어요 "
                android:id="@+id/review2"
                android:textColor="@color/abc_primary_text_material_light" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Review 3 너무 마싯어요"
                android:id="@+id/review3"
                android:textColor="@color/abc_primary_text_material_light" />


        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available time"
        android:id="@+id/available" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="예약하기"
        android:id="@+id/reserve"
        android:layout_marginLeft="250dp" />


</LinearLayout>
