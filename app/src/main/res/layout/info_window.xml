<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iw_imageView"
        android:src="@drawable/restaurant_ex"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="식당 이름"
        android:id="@+id/iw_textView"
        android:textColor="@color/primary"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화번호 / 주소"
        android:id="@+id/iw_textView2"
        android:textColor="@color/primary"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평점 / 리뷰"
        android:id="@+id/iw_textView3"
        android:textColor="@color/primary"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예약"
            android:clickable="true"
            android:id="@+id/iw_button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세 정보"
            android:clickable="true"
            android:id="@+id/iw_button2" />
    </LinearLayout>
</LinearLayout>