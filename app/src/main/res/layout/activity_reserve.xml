<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/oil"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/find_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            android:background="?attr/colorPrimary"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            app:title="@null"
            app:titleTextColor="@color/accent">
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="6"
            android:rowCount="10"
            android:useDefaultMargins="true"
            android:layout_gravity="center_horizontal"
            android:id="@+id/reserve_grid_layout"
            tools:context="com.knunu.android.whesiknow.ReserveActivity">


            <ImageView
                android:id="@+id/image1"
                android:layout_width="100dp"
                android:layout_height="95dp"
                android:src="@drawable/available"
                android:layout_columnSpan="2"
                android:layout_rowSpan="2" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="100dp"
                android:layout_height="95dp"
                android:src="@drawable/available"
                android:layout_columnSpan="2"
                android:layout_rowSpan="2" />

            <ImageView
                android:id="@+id/image3"
                android:layout_width="100dp"
                android:layout_height="95dp"
                android:src="@drawable/ocupied"
                android:layout_columnSpan="2"
                android:layout_rowSpan="2" />

            <ImageView
                android:id="@+id/image4"
                android:layout_width="95dp"
                android:layout_height="100dp"
                android:layout_columnSpan="2"
                android:src="@drawable/available" />

            <ImageView
                android:id="@+id/image5"
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:layout_columnSpan="4"
                android:src="@drawable/long_ocupied" />

            <ImageView
                android:id="@+id/image6"
                android:layout_width="95dp"
                android:layout_height="100dp"
                android:layout_columnSpan="2"
                android:src="@drawable/available" />

            <ImageView
                android:id="@+id/image7"
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:layout_rowSpan="2"
                android:layout_columnSpan="4"
                android:src="@drawable/long_selected" />

            <ImageView
                android:id="@+id/image8"
                android:layout_width="95dp"
                android:layout_height="100dp"
                android:layout_columnSpan="2"
                android:layout_row="4"
                android:layout_column="3"
                android:src="@drawable/ocupied" />

            <ImageView
                android:id="@+id/image9"
                android:layout_width="95dp"
                android:layout_height="100dp"
                android:layout_columnSpan="2"
                android:layout_row="4"
                android:layout_column="4"
                android:src="@drawable/ocupied" />

            <ImageView
                android:id="@+id/exit"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/exit"
                android:layout_row="8"
                android:rotation="270" />

            </GridLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reserve"
                android:id="@+id/reserve_button"
                android:layout_gravity="bottom" />
            </LinearLayout>
        </ScrollView>



</LinearLayout>

